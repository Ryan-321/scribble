<h2>All Comments</h2>

<% @comments.each do |comment| %>
<ul>
  <li>
    <p>Authored by <%= comment.author %></p>
  </li>
  <li>
    <%= link_to comment.author, post_comments_path %>
  </li>
  <li>
    <p><%= comment.comment %></p>
  </li>
  <li>
    <p>Date Created <%= time_ago_in_words comment.created_at %></p>
  </li>
</ul>
  <% end %>
